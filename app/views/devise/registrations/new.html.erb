<div class="login">
  
  <h1 class="icon-insta">InstagramXAN</h1>
    <h2 class="vvzhL ">Sign up to see photos and videos from your friends.</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
    <%= f.email_field :name, autofocus: true, autocomplete: "name",placeholder:"Your Name", type:"text" %>
  </div>
  
    <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"Email", type:"email" %>
  </div>

  <div class="fieldtext-center">
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"Password", type:"password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"Password", type:"password" %>
  </div>
  <br />
  <p class="ZGwn1">People who use our service may have uploaded your contact information to Instagram. <a href="https://www.facebook.com/help/instagram/261704639352628" tabindex="0" target="_blank">Learn More</a><br><br>By signing up, you agree to our <a href="https://help.instagram.com/581066165581870" tabindex="0" target="_blank">Terms</a> , <a href="https://www.facebook.com/privacy/policy" tabindex="0" target="_blank">Privacy Policy</a> and <a href="/legal/cookies/" tabindex="0" target="_blank">Cookies Policy</a> .</p>
  <br />
  <div class="actions">
    <%= f.submit "Sign up",type:"submit", value:"Sign up" %>
  </div>
<% end %>

<div class="infobox">
  
  <p>Have an account? <a href="https://instagram.com"><%= render "devise/shared/links" %></a></p>
  
</div>
