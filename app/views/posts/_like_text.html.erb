<strong>
  <% likes.each.with_index do |like, index| %>
      <% if likes.size == 1 %>
          <%= like.account.name %> </strong> like this
      <% elsif like == likes.last %>
          </strong>and<strong>
  <%= + like.account.name %></strong> like this
      <% elsif index > 1 %>
          </strong><%= "and " + (likes.size-index).to_s + " others " %> like this
          <% break %>
      <% elsif index==likes.size-2 || index==1%>
          <%= like.account.name %>
      <% else %>
          <%= like.account.name + ", " %>
      <% end %>
  <% end %>
  </strong>